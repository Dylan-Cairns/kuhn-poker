{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schema/game_contract.schema.json",
  "title": "Game Contract",
  "type": "object",
  "required": [
    "contract_name",
    "version",
    "entities",
    "turn_model",
    "actions",
    "legal_masks_by_phase",
    "observation",
    "onnx"
  ],
  "additionalProperties": false,
  "properties": {
    "contract_name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "entities": {
      "type": "object",
      "required": ["players", "cards", "public_actions", "phases"],
      "additionalProperties": false,
      "properties": {
        "players": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },
        "cards": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },
        "public_actions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },
        "phases": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      }
    },
    "turn_model": {
      "type": "object",
      "required": [
        "initial_phase",
        "initial_actor",
        "terminal_phase",
        "open_action_phases",
        "response_action_phases"
      ],
      "additionalProperties": false,
      "properties": {
        "initial_phase": { "type": "string", "minLength": 1 },
        "initial_actor": { "type": "string", "minLength": 1 },
        "terminal_phase": { "type": "string", "minLength": 1 },
        "open_action_phases": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },
        "response_action_phases": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      }
    },
    "actions": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["id", "name", "labels"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "integer", "minimum": 0 },
          "name": {
            "type": "string",
            "pattern": "^[A-Z][A-Z0-9_]*$"
          },
          "labels": {
            "type": "object",
            "required": ["open", "response"],
            "additionalProperties": false,
            "properties": {
              "open": { "type": "string", "minLength": 1 },
              "response": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "legal_masks_by_phase": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "array",
        "items": { "type": "integer", "enum": [0, 1] }
      }
    },
    "observation": {
      "type": "object",
      "required": ["size", "segments", "history_buckets", "terminal_history_index"],
      "additionalProperties": false,
      "properties": {
        "size": { "type": "integer", "minimum": 1 },
        "segments": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "offset", "size"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "offset": { "type": "integer", "minimum": 0 },
              "size": { "type": "integer", "minimum": 1 }
            }
          }
        },
        "history_buckets": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["index", "sequence"],
            "additionalProperties": false,
            "properties": {
              "index": { "type": "integer", "minimum": 0 },
              "sequence": {
                "oneOf": [
                  {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 }
                  },
                  { "type": "null" }
                ]
              }
            }
          }
        },
        "terminal_history_index": { "type": "integer", "minimum": 0 }
      }
    },
    "onnx": {
      "type": "object",
      "required": ["input_names", "output_names", "value_dim"],
      "additionalProperties": false,
      "properties": {
        "input_names": {
          "type": "object",
          "required": ["observation", "action_mask"],
          "additionalProperties": false,
          "properties": {
            "observation": { "type": "string", "minLength": 1 },
            "action_mask": { "type": "string", "minLength": 1 }
          }
        },
        "output_names": {
          "type": "object",
          "required": ["masked_logits", "value"],
          "additionalProperties": false,
          "properties": {
            "masked_logits": { "type": "string", "minLength": 1 },
            "value": { "type": "string", "minLength": 1 }
          }
        },
        "value_dim": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
